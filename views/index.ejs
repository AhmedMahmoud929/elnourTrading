    <!-- Swiper JS -->
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <!-- Initialize Swipers-->
    <script>
      // History swipper
      var historySwiper = new Swiper(".mySwiper-history", {
        direction: "vertical",
        slidesPerView: 1,
        spaceBetween: 30,
        autoplay: false,
