            </div>
            <div class="card-face back">
              <p>
                <%= t("VALUES.values-card.p") %>
              </p>
              <p class="view-btn view-less"><%= t("VALUES.values-card.less-btn") %></p>
            </div>
          </div>
        </div>
        <!-- mission -->
        <div
          class="card-cont"
          data-aos="fade-up"
          data-aos-duration="600"
          data-aos-delay="100"
        >
          <div class="icon">
            <img class="icon-img" src="./icons/mission.svg" alt="our mission" />
          </div>
          <div class="card">
            <div class="card-face front">
              <h1 class="title"><%= t("VALUES.mission-card.h1") %> <span><%= t("VALUES.mission-card.span") %></span></h1>
              <p class="view-btn view-more"><%= t("VALUES.mission-card.more-btn") %></p>
            </div>
            <div class="card-face back">
              <p>
                <%= t("VALUES.mission-card.p") %>
              </p>
              <p class="view-btn view-less"><%= t("VALUES.mission-card.less-btn") %></p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- NEWS -->
    <section id="about" class="news">
      <div class="container">
        <div class="right">
          <h1
            class="section-title"
            class="section-title"
            data-aos="fade-right"
            data-aos-duration="600"
          >
          <%= t("NEWS.name") %>
          </h1>
          <h1
            class="title"
            data-aos="fade-right"
            data-aos-duration="600"
            class="title"
          >
          <%= t("NEWS.h1") %> <span> <%= t("NEWS.span") %> </span></h1>
          <p data-aos="fade-right" data-aos-duration="600" data-aos-delay="100">
        <%= t("NEWS.p") %>
