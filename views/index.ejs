  <body>
    <!-- HOME -->
    <section id="home">
      <div class="container">
        <!-- alternative bg -->
        <img src="<%= images.HOME.alt_bg %>" alt="el-nour trading" class="alt-bg" />
        <!-- vidoe bg -->
        <video
          class="video-bg"
          src="<%= images.HOME.bg_vid.src %>"
          muted
          loop
          autoplay
        ></video>
        <!-- grady bg -->
        <img class="grady-bg" src="<%= images.HOME.gradient %>" alt="" />
        <!-- circles -->
        <div class="circle right"></div>
        <div class="circle left"></div>

        <!-- navbar -->
       <%- include("./parts/navbar.ejs",{base:""}) %>

        <!-- header -->
        <header>
          <h1 data-aos="zoom-out-down" data-aos-duration="700">
            <span>
              <%= t('HOME.span') %>
            </span>
            <%= t('HOME.h1') %>
          </h1>
          <p
            data-aos="zoom-out-down"
            data-aos-duration="700"
            data-aos-delay="200"
          >
          <%= t('HOME.p') %>
          </p>
          <a
            href="#about"
            data-aos="zoom-out-down"
            data-aos-duration="700"
            data-aos-delay="400"
          >
            <button class="btn"><%= t('HOME.btn') %></button>
          </a>
          <i class="fa-solid fa-circle-pause video-btn-controller "></i>
        
        </header>
      </div>
    </section>

    <!-- ABOUT -->
    <section id="about">
      <div class="container">
        <div
          class="left"
          data-aos="fade-right"
          data-aos-duration="600"
          data-aos-delay="100"
        >
          <img class="horiz" src="<%= images.ABOUT.horiz_img %>" alt="trucks" />
          <img class="vert" src="<%= images.ABOUT.vert_img %>" alt="elnour-trading" />
        </div>

        <div class="right">
          <h1
            class="section-title"
            class="section-title"
            data-aos="fade-right"
            data-aos-duration="600"
          >
          <%= t("ABOUT.name") %>
          </h1>
          <h1
            class="title"
            data-aos="fade-right"
            data-aos-duration="600"
            class="title"
          >
          <%= t("ABOUT.pre-span") %><span> <%= t("ABOUT.span") %> </span><%= t("ABOUT.post-span") %>
