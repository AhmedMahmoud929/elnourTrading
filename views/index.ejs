    <script src="./js/cardsHandler.js"></script>
    <script src="./js/videoController.js"></script>
    <script src="./js/phoneNavbar.js"></script>

    <!-- AOS Library -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
