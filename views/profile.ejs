<!DOCTYPE html>
<html
  lang="<%= currentLocale %>"
  dir="<%= currentLocale=='en' ? 'ltr' : 'rtl' %>"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="<%= images.WEBSITE_ICON.icon %>" rel="shortcut icon" />
    <title>El-Nour Trading - Profile</title>
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- AOS Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <!-- Main Style -->
    <link rel="stylesheet" href="./css/index.css" />
    <link rel="stylesheet" href="./css/navbar.css" />
    <link rel="stylesheet" href="./css/profile.css" />
    <link rel="stylesheet" href="./css/banner.css" />
    <link rel="stylesheet" href="./css/footer.css" />
    <% if (currentLocale === 'ar') { %>
    <link rel="stylesheet" href="./css/index-ar.css" />
    <% } %>
  </head>
  <body>
    <!-- HOME -->
    <section id="profile">
      <div class="container">
        <!-- navbar -->
        <nav>
          <!-- logo -->
          <a href="/">
            <img src="<%= images.NAVBAR.logo %>" alt="el-nour trading" />
          </a>
          <!-- list -->
          <ul>
            <li>
              <a href="#home"><%= t("NAVBAR.nav_elements.a1") %></a>
            </li>
            <li><a href="/#about"><%= t("NAVBAR.nav_elements.a2") %></a></li>
            <li>
              <a href="/profile" class="active"
                ><%= t("NAVBAR.nav_elements.a3") %></a
              >
            </li>
            <li><a href="/#services"><%= t("NAVBAR.nav_elements.a4") %></a></li>
            <li>
              <a href="#gallery"><%= t("NAVBAR.nav_elements.a5") %></a>
            </li>
            <li><a href="/#contact"><%= t("NAVBAR.nav_elements.a6") %></a></li>
          </ul>
          <!-- menu toggle -->
          <div class="toggle-icon">
            <div class="top"></div>
            <div class="middle"></div>
            <div class="bottom"></div>
          </div>
        </nav>
        <ul class="nav-phone">
          <li>
            <a href="#home"><%= t("NAVBAR.nav_elements.a1") %></a>
          </li>
          <li><a href="/#about"><%= t("NAVBAR.nav_elements.a2") %></a></li>
          <li>
            <a href="/profile" class="active"
              ><%= t("NAVBAR.nav_elements.a3") %></a
            >
          </li>
          <li><a href="/#services"><%= t("NAVBAR.nav_elements.a4") %></a></li>
          <li>
            <a href="#gallery"><%= t("NAVBAR.nav_elements.a5") %></a>
          </li>
          <li><a href="/#contact"><%= t("NAVBAR.nav_elements.a6") %></a></li>
        </ul>

        <!-- header -->
        <header>
          <h1
            class="title"
            data-aos="fade-up"
            data-aos-duration="600"
            class="title"
          >
            <%= t("PROFILE.h1") %> <span><%= t("PROFILE.span") %></span>
          </h1>
          <!-- start of MAIN ELEMENT -->
          <!-- <iframe
            data-aos="fade-up"
            data-aos-duration="600"
            data-aos-delay="100"
            src="./files/SOYA OIL BROCHURE.pdf"
          ></iframe>
          <iframe
            data-aos="fade-up"
            data-aos-duration="600"
            data-aos-delay="100"
            src="./files/Soybean-Meal Brochure.pdf"
          ></iframe> -->
          <div class="cards-cont">
            <% for(brochure of brochures) { %>
            <div
              class="card"
              data-aos="zoom-out-down"
              data-aos-duration="800"
              data-aos-delay="100"
            >
              <div class="cover">
                <a href="<%= brochure.file %>" download="<%= brochure.file %>">
                  <button class="btn">
                    <i class="fa-solid fa-file-arrow-down"></i>
                  </button>
                </a>
                <img src="<%= brochure.cover %>" alt="" />
                <img src="./imgs/grady_bg.png" alt="" />
              </div>
              <div class="details">
                <h1><%= brochure.title %></h1>
              </div>
            </div>
            <% } %>
          </div>
          <!-- end of MAIN ELEMENT -->
          <a data-aos="fade-up" data-aos-duration="600" href="/">
            <button class="btn"><%= t("PROFILE.btn") %></button>
          </a>
        </header>
      </div>
    </section>

    <!-- BANNER -->
    <section id="banner">
      <!-- grady bg -->
      <img class="grady-bg" src=" <%= images.HOME.gradient %> " alt="" />
      <!-- container -->
      <div class="container">
        <h1
          class="title"
          data-aos="zoom-out-down"
          data-aos-duration="600"
          class="title"
        >
          <%= t("CONTACT.h1") %> <span><%= t("CONTACT.span") %></span>
        </h1>
        <p
          data-aos="zoom-out-down"
          data-aos-duration="600"
          data-aos-delay="100"
        >
          <%= t("CONTACT.sub_pages_contact_p") %>
        </p>
        <a
          data-aos="fade-up"
          data-aos-duration="600"
          data-aos-delay="200"
          href="/#contact"
        >
          <button class="btn"><%= t("CONTACT.sub_pages_contact_btn") %></button>
        </a>
      </div>
    </section>

    <!-- FOOTER -->
    <footer id="footer">
      <!-- circles -->
      <div class="circle right"></div>
      <div class="circle left"></div>
      <!-- container -->
      <div class="container">
        <div class="top">
          <img src="<%= images.FOOTER.logo %>" alt="el-nour trading" />
          <!-- list -->
          <ul>
            <li>
              <a href="/#home"><%= t("FOOTER.footer_elements.a1") %></a>
            </li>
            <li><a href="/#about"><%= t("FOOTER.footer_elements.a2") %></a></li>
            <li>
              <a href="/profile"><%= t("FOOTER.footer_elements.a3") %></a>
            </li>
            <li>
              <a href="/#services"><%= t("FOOTER.footer_elements.a4") %></a>
            </li>
            <li>
              <a href="/#gallery" class="active"
                ><%= t("FOOTER.footer_elements.a5") %></a
              >
            </li>
            <li>
              <a href="/#contact"><%= t("FOOTER.footer_elements.a6") %></a>
            </li>
          </ul>
        </div>
        <!-- just for styling -->
        <div class="separator"></div>
        <!-- bottom -->
        <p><%= t("FOOTER.p") %></p>
      </div>
    </footer>

    <!-- Main Scripts -->
    <script src="./js/phoneNavbar.js"></script>
    <!-- AOS Library -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>
  </body>
</html>
