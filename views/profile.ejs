<% function lang(){ return `?lang=${currentLocale}` } %>
<!DOCTYPE html>
<html
  lang="<%= currentLocale %>"
  dir="<%= currentLocale=='en' ? 'ltr' : 'rtl' %>"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="<%= images.FAVICON.icon %>" rel="shortcut icon" />
    <title>El-Nour Trading - Profile</title>
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- AOS Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <!-- Main Style -->
    <link rel="stylesheet" href="./css/index.css" />
    <link rel="stylesheet" href="./css/navbar.css" />
    <link rel="stylesheet" href="./css/profile.css" />
    <link rel="stylesheet" href="./css/banner.css" />
    <link rel="stylesheet" href="./css/footer.css" />
    <% if (currentLocale === 'ar') { %>
    <link rel="stylesheet" href="./css/index-ar.css" />
    <% } %>
  </head>
  <body>
    <!-- HOME -->
    <section id="profile">
      <div class="container">
        <!-- navbar -->
        <%- include("./parts/navbar.ejs",{active:"", base:"/"}) %>

        <!-- header -->
        <header>
          <h1
            class="title"
            data-aos="fade-up"
            data-aos-duration="600"
            class="title"
          >
            <%= t("PROFILE.h1") %> <span><%= t("PROFILE.span") %></span>
          </h1>

          <div class="cards-cont">
            <% for(brochure of brochures) { %>
            <div
              class="card"
              data-aos="zoom-out-down"
              data-aos-duration="800"
              data-aos-delay="100"
            >
              <div class="cover">
                <a href="<%= brochure.file %>" download="<%= brochure.file %>">
                  <button class="btn">
                    <i class="fa-solid fa-file-arrow-down"></i>
                  </button>
                </a>
                <img src="<%= brochure.cover %>" alt="" />
                <img src="./imgs/grady_bg.png" alt="" />
              </div>
              <div class="details">
                <h1><%= brochure.title %></h1>
              </div>
            </div>
            <% } %>
          </div>
          <!-- end of MAIN ELEMENT -->
          <a data-aos="fade-up" data-aos-duration="600" href="/<%=lang()%>">
            <button class="btn"><%= t("PROFILE.btn") %></button>
          </a>
        </header>
      </div>
    </section>

    <!-- BANNER -->
    <%- include("./parts/banner.ejs") %>

    <!-- FOOTER -->
    <%- include("./parts/footer.ejs",{active:"", base:"/"}) %>

    <!-- Main Scripts -->
    <script src="./js/phoneNavbar.js"></script>
    <!-- AOS Library -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>
  </body>
</html>
