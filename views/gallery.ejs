<% function lang(){ return `?lang=${currentLocale}` } %>
<!DOCTYPE html>
<html
  lang="<%= currentLocale %>"
  dir="<%= currentLocale=='en' ? 'ltr' : 'rtl' %>"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="<%= images.FAVICON.icon %>" rel="shortcut icon" />
    <title>El-Nour Trading - Gallery</title>
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- AOS Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <!-- Main Style -->
    <link rel="stylesheet" href="./css/index.css" />
    <link rel="stylesheet" href="./css/navbar.css" />
    <link rel="stylesheet" href="./css/gallery-page.css" />
    <link rel="stylesheet" href="./css/banner.css" />
    <link rel="stylesheet" href="./css/footer.css" />
    <% if (currentLocale === 'ar') { %>
    <link rel="stylesheet" href="./css/index-ar.css" />
    <% } %>
  </head>
  <body>
    <!-- HOME -->
    <section id="gallery-page">
      <div class="container">
        <!-- navbar -->
        <%- include("./parts/navbar.ejs",{base :"/"}) %>

        <!-- header -->
        <header>
          <h1
            class="title"
            data-aos="fade-down"
            data-aos-duration="600"
            class="title"
          >
            <%= t("GALLERY.h1") %> <span><%= t("GALLERY.span") %></span>
          </h1>
          <!--  -->
          <div class="frames">
            <% galleryImgs.forEach(function(img) { %>
            <div
              class="item"
              data-aos="flip-right"
              data-aos-duration="900"
              data-aos-delay="100"
            >
              <img class="bg-img" src="<%= img.path %>" alt="gallery" />
              <img class="main-img" src="<%= img.path %>" alt="gallery" />
            </div>

            <% }) %>
          </div>
          <!--  -->
          <a
            data-aos="fade-right"
            data-aos-duration="600"
            data-aos-delay="100"
            href="/<%=lang()%>"
          >
            <button class="btn"><%= t("GALLERY.sub_page_btn") %></button>
          </a>
        </header>
      </div>
    </section>

    <!-- BANNER -->
    <%- include("./parts/banner.ejs") %>

    <!-- FOOTER -->
    <%- include("./parts/footer.ejs",{base:"/"}) %>

    <!-- Main Scripts -->
    <script src="./js/phoneNavbar.js"></script>
    <!-- AOS Library -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>
  </body>
</html>
